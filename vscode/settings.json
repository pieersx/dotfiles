{
  /** ------------ Configuración Seguridad y Archivos ------------ **/
  // Seguridad
  "security.workspace.trust.untrustedFiles": "open",

  // Archivos
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Guardado
  "window.confirmSaveUntitledWorkspace": false,

  /** ------------ Configuración Editor ------------ **/
  // Appearance
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.guides.indentation": true,
  // "editor.rulers": [80, 120],

  // Fonts
  "editor.fontFamily": "Iosevka Nerd Font",
  "editor.fontSize": 20,
  "editor.fontLigatures": true,
  "editor.fontWeight": 500,

  // Formateo
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabSize": 4,

  // Cursor
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",

  // Interacción
  "editor.mouseWheelZoom": true,
  "editor.multiCursorModifier": "ctrlCmd",

  // Texto
  "editor.wordWrap": "on",
  "editor.linkedEditing": true, // HTML

  // Scroll
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.smoothScrolling": true,

  // Temas y Apariencia
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "oneDarkPro.bold": true,
  "oneDarkPro.vivid": true,
  "window.systemColorTheme": "dark",

  // Busqueda
  "editor.find.seedSearchStringFromSelection": "never",

  /** ------------ Configuración Editor y Explorador ------------ **/
  // Pestañas y Archivos
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "multiple",
  "workbench.editorLargeFileConfirmation": 10024,

  // Ventana y Menús
  "window.menuBarVisibility": "hidden",
  "window.enableMenuBarMnemonics": false,
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",
  "workbench.layoutControl.enabled": false,
  "workbench.panel.showLabels": true,

  // Explorador de Archivos
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 18,
  "workbench.tree.renderIndentGuides": "none",

  /** ------------ Configuración Explorador ------------ **/
  "explorer.sortOrder": "default",
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,

  /** ------------ Configuración Terminal ------------ **/
  // Configuración General
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  // Fonts
  "terminal.integrated.fontFamily": "Iosevka Nerd Font",
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontWeight": 800,

  // Cursor y keybindings
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.sendKeybindingsToShell": true,

  // Interacción y Scroll
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.stickyScroll.enabled": true,

  /** ------------ Configuración Navegación ------------ **/
  "breadcrumbs.enabled": false,
  "breadcrumbs.symbolPath": "on",
  "breadcrumbs.filePath": "off",

  /** ------------ Configuración IntelliSense y Snippets ------------ **/
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.quickSuggestions": {
    "other": true,
    "strings": true
  },
  "editor.snippetSuggestions": "top",

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.acceptSuggestionOnEnter": "smart",

  /** ------------ Configuración Lenguajes Específicos ------------ **/
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode",
    "editor.tabSize": 2
  },

  /** ------------ Configuración Extensiones ------------ **/
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,

  /** ------------ Configuración Prettier ------------ **/
  "prettier.singleQuote": true,
  "prettier.semi": false,
  // "prettier.printWidth": 100,
  "prettier.jsxSingleQuote": true,
  "prettier.vueIndentScriptAndStyle": true,

  /** ------------ Configuración Live Server ------------ **/
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 6969,
  "liveServer.settings.CustomBrowser": "chrome",

  /** ------------ Configuración Custom CSS and JS Loader ------------ **/
  "vscode_custom_css.imports": [
    "file:///C:/Users/Pieers/Documents/custom.css"
    // "file:///C:/Users/Pieers/Documents/custom.js"
  ],

  /** ------------ Configuración Emmet ------------ **/
  "emmet.showExpandedAbbreviation": "always",
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "pug"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },

  /** ------------ Configuración ESlint ------------ **/
  "eslint.format.enable": true,
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always",
    "source.organizeImports": "always"
  },

  /** ------------ Configuración Tailwind CSS IntelliSense ------------ **/
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "javascript": "html",
    "typescript": "html"
  },

  /** ------------ Configuración Edamagit ------------ **/
  "magit.display-buffer-function": "same-column",
  "magit.forge-enabled": true,

  /** ------------ Configuración SQLTools ------------ **/
  "sqltools.highlightQuery": false,

  /** ------------ Configuración Prettier SQL VSCode ------------ **/
  "Prettier-SQL.keywordCase": "upper",
  "Prettier-SQL.SQLFlavourOverride": "postgresql",
  "Prettier-SQL.tabulateAlias": true,

  /** ------------ Configuración Error Lens ------------ **/
  "errorLens.messageBackgroundMode": "message",
  "errorLens.fontWeight": "800",
  "errorLens.fontStyleItalic": true,
  "errorLens.gutterIconSet": "borderless",
  "errorLens.gutterIconsEnabled": true,

  /** ------------ Configuración Awesome Emacs keymap ------------ **/
  "emacs-mcx.emacsLikeTab": true,
  "emacs-mcx.useMetaPrefixEscape": true,
  "emacs-mcx.killWholeLine": true,
  "emacs-mcx.lineMoveVisual": true
}
